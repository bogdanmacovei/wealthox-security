@model Wealthox.Web.Models.Account.LoginVm

@{
    ViewData["Title"] = "Login";
}
<div class="row login-register login-register-form-div">
    <div class="container center-block login-container">
        <h2 class="login-header">Login</h2>
        <h4 class="login-header">Or <a class="register login-header-anchor" asp-controller="UserAccount" asp-action="Register">Register</a> if you don`t have an account</h4>
        <br /><br />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="">
                    <label asp-for="Email" class="control-label login-label">Email</label>
                </div>
                <div class="">
                    <input asp-for="Email" class="loginInput form-control login-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="">
                    <label asp-for="Password" class="control-label login-label">Password</label>
                </div>
                <div class="">
                    <input type="password" asp-for="Password" class="form-control loginInput login-input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            @if (Model.AreCredentialsInvalid)
            {
                <span class="text-danger">Email sau parola incorecte</span>
            }
            <br />
            <div class="form-group LoginButtons" style="text-align: center">
                <input type="submit" value="Login" class="btn btn-default myButton login-button" />
            </div>
        </form>
    </div>
</div>